{
  "name": "top-layer",
  "version": "2.0.0",
  "description": "Library for working with native HTML dialogs and upper layers (f.e. notifications) without unnecessary application rerenders.",
  "files": [
    "dist",
    "index.d.ts",
    "dialogs",
    "upper-layers"
  ],
  "main": "./dist/index.js",
  "typings": "./index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "prepare": "husky"
  },
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./dist/index.js"
    },
    "./upper-layers": {
      "types": "./upper-layers/index.d.ts",
      "default": "./dist/upper-layers/index.js"
    },
    "./upper-layers/hooks": {
      "types": "./upper-layers/hooks.d.ts",
