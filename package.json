      "default": "./dist/upper-layers/constants.js"
    },
    "./upper-layers/types": {
      "types": "./upper-layers/types.d.ts",
      "default": "./dist/upper-layers/types.js"
    },
    "./dialogs": {
      "types": "./dialogs/index.d.ts",
      "default": "./dist/dialogs/index.js"
    },
    "./dialogs/hooks": {
      "types": "./dialogs/hooks.d.ts",
